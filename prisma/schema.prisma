generator client {
  provider   = "prisma-client"
  output     = "../generated/prisma"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                    String    @id @default(uuid())
  email                 String    @unique
  password              String
  name                  String
  rememberMe            Boolean   @default(false) 
  resetPasswordToken    String?   @unique 
  resetPasswordTokenExp DateTime? 
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  saleHistory           SaleHistory[]
}

model Category {
  id       String @id @default(uuid())
  name     String @unique
  position Int    @default(0)

  // Relación recursiva: Una categoría puede tener un padre y muchas subcategorías
  parentId      String?
  parent        Category?  @relation("SubCategories", fields: [parentId], references: [id], onDelete: SetNull)
  subCategories Category[] @relation("SubCategories")

  // Relación con productos 
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProductStatus {
  ACTIVE
  INACTIVE
}

enum ProductGender {
  MALE
  FEMALE
  UNISEX
}

model Product {
  id          String        @id @default(uuid())
  name        String
  description String?       @db.Text
  gender      ProductGender
  brand       String
  images      String[]
  status      ProductStatus @default(ACTIVE)
  stock       Int     @default(0)

  // Relación con Categoría
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  // Opciones
  options ProductOption[]

  // Variantes finales (La combinación que se vende)
  variants ProductVariant[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductOption {
  id        String  @id @default(uuid())
  name      String
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  values String[]
}


model ProductVariant {
  id    String  @id @default(uuid())
  sku   String  
  price Decimal @db.Decimal(10, 2)
  stock Int     @default(0)

  // Ejemplo: { "Color": "Azul", "Talla": "42" }
  attributes Json

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  saleItems SaleItem[]
}

model Client {
  id    String @id @default(uuid())
  name  String
  email String
  phone String

  sales Sale[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum SaleStatus {
  PENDING
  INPREPARATION
  SHIPPED
  CANCELLED
  COMPLETED
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

model Sale {
  id String @id @default(uuid())

  orderNumber String     @unique
  status      SaleStatus @default(PENDING)

  // Cliente
  clientId String
  client   Client @relation(fields: [clientId], references: [id])

  // Pago
  paymentMethod PaymentMethod
  paymentStatus PaymentStatus @default(PENDING)
  total         Decimal       @db.Decimal(10, 2)

  // Envío
  shippingAddress String
  trackingCode    String?

  // Productos
  items SaleItem[]

  // Historial
  history SaleHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SaleHistory {
  id String @id @default(uuid())

  saleId String
  sale   Sale   @relation(fields: [saleId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  status SaleStatus
  note   String?

  createdAt DateTime @default(now())
}

model SaleItem {
  id String @id @default(uuid())

  saleId String
  sale   Sale   @relation(fields: [saleId], references: [id], onDelete: Cascade)

  variantId String
  variant   ProductVariant @relation(fields: [variantId], references: [id])

  quantity Int
  total    Decimal @db.Decimal(10, 2)

  createdAt DateTime @default(now())
}
